<UserControl xmlns="https://github.com/avaloniaui"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:viewModels="clr-namespace:Neumorphism.Avalonia.Demo.ViewModels"
              xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
              xmlns:assist="clr-namespace:Avalonia.Themes.Neumorphism.Assist;assembly=Avalonia.Themes.Neumorphism"
              xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
              xmlns:showMeTheXaml="clr-namespace:ShowMeTheXaml;assembly=ShowMeTheXaml.Avalonia"
              x:CompileBindings="True"
              x:DataType="viewModels:MenusDemoViewModel"
              x:Class="Neumorphism.Avalonia.Demo.Pages.MenusDemo">
  

    <StackPanel Margin="16, 0" >
        <TextBlock Classes="Headline4 Subheadline" Text="Menus" />



      <StackPanel Orientation="Vertical">
        <!--****************************************************************-->
        <showMeTheXaml:XamlDisplay UniqueId="Menu1" Height="100">
          <Menu Padding="0" Margin="0" Cursor="Hand">
            <MenuItem Header="File">
              <MenuItem Header="Hello !">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Hand" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <Separator />
              </MenuItem>
              <MenuItem Header="Edit">
                <MenuItem Header="Copy">
                  <MenuItem.Icon>
                    <icons:MaterialIcon Kind="Copyleft" Width="24" Height="24" />
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Cut">
                  <MenuItem.Icon>
                    <icons:MaterialIcon Kind="Cutlery" Width="24" Height="24" />
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Paste">
                  <MenuItem.Icon>
                    <icons:MaterialIcon Kind="Pasta" Width="24" Height="24" />
                  </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="Undo">
                  <MenuItem.Icon>
                    <icons:MaterialIcon Kind="Undo" Width="24" Height="24" />
                  </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Redo">
                  <MenuItem.Icon>
                    <icons:MaterialIcon Kind="Redo" Width="24" Height="24" />
                  </MenuItem.Icon>
                </MenuItem>
              </MenuItem>
            </Menu>
        </showMeTheXaml:XamlDisplay>
        <!--****************************************************************-->
        <showMeTheXaml:XamlDisplay UniqueId="Menu2" Height="100">
          <Menu Height="32" Padding="0" Margin="0" Cursor="Hand" Theme="{StaticResource NoMaterialMenu}">
            <MenuItem Height="32" Header="File">
              <MenuItem Header="Hello !">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Hand" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <Separator />
            </MenuItem>
            <MenuItem Height="32" Header="Edit">
              <MenuItem Header="Copy">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Copyleft" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <MenuItem Header="Cut">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Cutlery" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <MenuItem Header="Paste">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Pasta" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <Separator />
              <MenuItem Header="Undo">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Undo" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <MenuItem Header="Redo">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Redo" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
            </MenuItem>
          </Menu>
        </showMeTheXaml:XamlDisplay>
        <!--****************************************************************-->
        <showMeTheXaml:XamlDisplay UniqueId="Menu3" Height="100">
          <Menu Grid.Column="5" Height="64" Padding="0" Margin="0" Cursor="Hand">
            <MenuItem Height="64" Width="64" CornerRadius="100" assist:MenuAssist.PopupCornerRadius="10"
                assist:MenuAssist.PopupAnchor="TopRight"
                assist:MenuAssist.PopupHorizontalOffset="-140"
                assist:MenuAssist.PopupVerticalOffset="10">
              <MenuItem.Resources>
                <!--<StaticResource x:Key="MenuFlyoutItemBackground" ResourceKey="SystemControlTransparentBrush" />
                    <SolidColorBrush x:Key="SystemControlTransparentBrush" Color="Green" />-->

                <!--<StaticResource x:Key="MenuFlyoutItemBackgroundPointerOver" ResourceKey="SystemControlHighlightListLowBrush" />
                <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="Red" />


                <StaticResource x:Key="MenuFlyoutItemBackgroundPressed" ResourceKey="SystemControlHighlightListMediumBrush" />
                <SolidColorBrush x:Key="SystemControlHighlightListMediumBrush" Color="Blue" />-->
              </MenuItem.Resources>
              <MenuItem.Header>
                <Border Width="64" Height="64" Margin="20" CornerRadius="25" BorderBrush="{DynamicResource MaterialDesignToolBackground}" BorderThickness="3" ClipToBounds="True">
                  <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CornerRadius="120" ClipToBounds="True">
                    <Image HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" ClipToBounds="True"
                                Source="avares://Neumorphism.Avalonia.Demo/Assets/300.jpg" Stretch="Uniform" Width="64" Height="64" />
                  </Border>
                </Border>
              </MenuItem.Header>
              <MenuItem Header="Hello !">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="Hand" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
              <Separator />
              <MenuItem Header="About" Command="{Binding HelpAboutMethod}" />
              <Separator />
              <MenuItem Header="Goodbye">
                <MenuItem.Icon>
                  <icons:MaterialIcon Kind="ExitRun" Width="24" Height="24" />
                </MenuItem.Icon>
              </MenuItem>
            </MenuItem>
          </Menu>
        </showMeTheXaml:XamlDisplay>
        <!--****************************************************************-->
      </StackPanel>
        
    </StackPanel>


</UserControl>
